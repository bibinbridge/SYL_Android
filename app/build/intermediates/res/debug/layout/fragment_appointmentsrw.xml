        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        >
       <LinearLayout
        android:id="@+id/liout_addphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        >

    
