<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground" >

    <RelativeLayout
        android:id="@+id/relout_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/forgot_headerbg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_backarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_arrow" >
        </ImageView>

        <TextView
            android:id="@+id/txt_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text_signuptitle"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relout_heading"
        android:layout_marginBottom="20dp" >

        <RelativeLayout
            android:id="@+id/rel_userdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relout_heading" >

            <ImageView
                android:id="@+id/img_userimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/add_photo1" >
            </ImageView>

            <LinearLayout
                android:id="@+id/liout_userdetails"
                android:layout_width="300dp"
                android:layout_height="330dp"
                android:layout_below="@id/img_userimage"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/sylsignup_bg"
                android:orientation="vertical" >

                               <EditText
                        android:id="@+id/etxt_username"
                        android:layout_width="@dimen/username_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/signin_usernameicon"
                   android:drawablePadding="10dp"
                        android:hint="@string/username"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                                   android:maxLength="30"
                                   android:textCursorDrawable="@drawable/cursordrawable">
                    </EditText>

               <EditText
                        android:id="@+id/etxt_email"
                        android:layout_width="@dimen/username_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/signin_emailicon"
                                  android:drawablePadding="10dp"
                        android:hint="@string/email"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                   android:textCursorDrawable="@drawable/cursordrawable">
                    </EditText>

                  <EditText
                        android:id="@+id/etxt_password"
                        android:layout_width="@dimen/username_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/signup_passwordicon"
                        android:drawablePadding="10dp"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                      android:textCursorDrawable="@drawable/cursordrawable">
                    </EditText>

          <EditText
                        android:id="@+id/etxt_confirmpassword"
                        android:layout_width="@dimen/username_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/signup_passwordicon"
                    android:drawablePadding="10dp"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
              android:textCursorDrawable="@drawable/cursordrawable">
                    </EditText>
            <EditText
                        android:id="@+id/etxt_facetimeid"
                        android:layout_width="@dimen/username_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/facetimetimeicon"
                       android:drawablePadding="10dp"
                        android:hint="Facetime ID"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                android:textCursorDrawable="@drawable/cursordrawable">
                    </EditText>
             <EditText
                        android:id="@+id/etxt_skypeid"
                        android:layout_width="@dimen/username_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/signup_skypeicon"
                       android:drawablePadding="10dp"
                        android:hint="@string/skype_id"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                 android:textCursorDrawable="@drawable/cursordrawable">
                    </EditText>

                    <EditText
                        android:id="@+id/etxt_hangouticon"
                        android:layout_width="@dimen/username_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/signup_hangouticon"
                         android:drawablePadding="10dp"
                        android:hint="@string/hangout_id"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textCursorDrawable="@drawable/cursordrawable">
                    </EditText>

                   <LinearLayout
                        android:id="@+id/etxt_countrycode"
                        android:layout_width="@dimen/username_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_countrcodeicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/signup_countrycodeicon" >
                        </ImageView>

                        <TextView
                            android:id="@+id/txt_countrycode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:freezesText="true"
                            android:hint="@string/country_code"
                            android:textColor="@color/white" >
                        </TextView>
                    </LinearLayout>

              <EditText
                        android:id="@+id/etxt_mobilenumber"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/signup_mobileicon"
                        android:drawablePadding="10dp"
                        android:hint="@string/mobileno_hint"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                  android:textCursorDrawable="@drawable/cursordrawable">
                    </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/liout_userdetails"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/selector_btnsignin"
                android:onClick="doUserSignup"
                android:text="@string/text_signup"
                android:textColor="@color/white" >
            </Button>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/D:/SYL-Backup-18-dec-2015/SYL-backup-12-oct-2015/app/src/main/res/layout-land/syl_signuplayout.xml -->