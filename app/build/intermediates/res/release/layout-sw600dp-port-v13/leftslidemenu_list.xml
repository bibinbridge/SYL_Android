<?xml version="1.0" encoding="utf-8"?>

<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"  
      xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"  
android:background="@color/slidingmenu_background"
   android:layout_height="match_parent" 
android:id="@+id/scr"

    
    >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/slidingmenu_background" >

    <LinearLayout
        android:id="@+id/liout_profileimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/slidingmenu_topbar"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/liout_addphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true" >

 

            <com.makeramen.RoundedImageView
                android:id="@+id/img_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/syl_applaunchericon"
                app:border_color="#cccccc"
                app:border_width="1dip"
                app:corner_radius="100dip" />



        </LinearLayout>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:text="Leandro Lisboa"
            android:textColor="@color/white"
            android:textSize="20sp" >
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_below="@id/liout_profileimage"
        android:background="@color/slidingmenu_background" />

    <LinearLayout
        android:id="@+id/liout_logobottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     android:visibility="invisible"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
   
        android:layout_below="@android:id/list"
  android:layout_marginTop="@dimen/syllogo"
         >

        <ImageView
            android:id="@+id/img_syllogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/syl_logosidebar"
           
             >
        </ImageView>
        <TextView
            android:id="@+id/txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Version 1.01"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            >
            </TextView>
        
        
        
        
        
        
        
    </LinearLayout>

</RelativeLayout>




</ScrollView>










