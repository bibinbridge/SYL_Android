<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/appbackground"
    >
    <RelativeLayout
        android:id="@+id/rel_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        >
        <TextView
            android:id="@+id/txt_incomingcall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incoming Call ..."
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            >
            </TextView>
                       <LinearLayout
            android:id="@+id/liout_addphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
            >
             <com.makeramen.RoundedImageView
                android:id="@+id/row_icon"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/tablet_sylnouserimage"
                app:border_color="#cccccc"
                app:border_width="1dip"
                app:corner_radius="100dip"
        
                 />
</LinearLayout>
             <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
      
            android:layout_below="@id/liout_addphoto"
            >
            </TextView>  
        
        
        <LinearLayout
            android:id="@+id/liout_add_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            
            >
        <Button
          android:id="@+id/btn_decline"  
           android:layout_width="140dp"
           android:layout_height="wrap_content"
           android:text="Decline" 
             android:textColor="@color/white"
            android:background="@drawable/selector_rejectcall"
            android:layout_marginRight="8dp"
            android:onClick="rejectOpentokcall"
            android:textSize="20sp"
            >
        </Button>
                <Button
          android:id="@+id/btn_accept"  
            android:layout_width="140dp"
           android:layout_height="wrap_content"
           android:text="Accept" 
             android:textColor="@color/white"
           android:layout_marginLeft="8dp"
                    android:background="@drawable/selector_acceptcall"
            android:onClick="acceptOpentokcall"
                    android:textSize="20sp"
            >
        </Button>
        </LinearLayout>
        
        
        
        
</RelativeLayout>
</RelativeLayout>
