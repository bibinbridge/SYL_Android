        android:drawableLeft="@drawable/etxt_searchicon"
        android:drawablePadding="10dp"
        android:hint="Search Your Phone Contacts"
        android:imeOptions="actionDone"
        android:maxLength="30"
        android:paddingLeft="20dp"
        android:singleLine="true"
      
        android:textColor="@color/white" >
    </EditText>

<com.webcamconsult.syl.fragments.RefreshableListView
        android:id="@+id/listview_phonecontacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etxt_searchfavourites" />


