<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scr_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp" >

        <RelativeLayout
            android:id="@+id/rel_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/img_userimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/syl_testuserimage" >
            </ImageView>
                  <LinearLayout
            android:id="@+id/liout_addphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
            >
             <com.makeramen.RoundedImageView
                android:id="@+id/row_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/syl_nouserimage"
                app:border_color="#cccccc"
                app:border_width="1dip"
                app:corner_radius="100dip"
        
                 />
</LinearLayout>
            <RelativeLayout
                android:id="@+id/rel_userdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_userimage" >

                <LinearLayout
                    android:id="@+id/liout_userdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"

                    android:background="@drawable/tablet_profile_bg1"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/etxt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/tablet_signup_etxtbg"
                        android:drawableLeft="@drawable/tablet_nameicon"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="8dp"
                        >
                    </EditText>

                    <EditText
                        android:id="@+id/etxt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/tablet_signup_etxtbg"
                        android:drawableLeft="@drawable/tablet_emailicon"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="8dp">
                    </EditText>
                    <EditText
                        android:id="@+id/etxt_facetimeid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/tablet_signup_etxtbg"
                        android:drawableLeft="@drawable/tablet_facetimeicon"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="8dp">
                    </EditText>
                    <EditText
                        android:id="@+id/etxt_skypeid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/tablet_signup_etxtbg"
                        android:drawableLeft="@drawable/tablet_skypeicon"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="8dp">
                    </EditText>


                    <EditText
                        android:id="@+id/etxt_hangouticon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/tablet_signup_etxtbg"
                        android:drawableLeft="@drawable/tablet_hangouticon"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="8dp">
                    </EditText>

                    <LinearLayout
                        android:id="@+id/etxt_countrycode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/tablet_signup_etxtbg"
                        android:orientation="horizontal"
                        android:layout_marginLeft="8dp">

                        <ImageView
                            android:id="@+id/img_countrcodeicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="0dp"
                            android:src="@drawable/tablet_countrycodeicon" >
                        </ImageView>

                        <TextView
                            android:id="@+id/txt_countrycode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:freezesText="true"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="@color/white" >
                        </TextView>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etxt_mobilenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/tablet_signup_etxtbglast"
                        android:drawableLeft="@drawable/tablet_mobileicon"
                        android:drawablePadding="10dp"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_marginLeft="8dp">
                    </EditText>
                </LinearLayout>

                <Button
                   android:id="@+id/btn_userupdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/liout_userdetails"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/signup_signupmargintop"
                    android:background="@drawable/selector_tablet_btnsignin"
                    android:text="Update"
                        android:textSize="18sp" 
                    android:textColor="@color/white" >
                </Button>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_userdetails"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Change Password"
                android:textColor="@color/white"
                android:textSize="24sp" >
            </TextView>

            <LinearLayout
                android:id="@+id/liout_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_changepassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/tablet_changepasswordbg1"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/etxt_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                   android:background="@drawable/tablet_signup_etxtbg"
                    android:drawableLeft="@drawable/tablet_passwordicon2"
                    android:drawablePadding="10dp"
                    android:hint="Current password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="8dp"
                    >
                </EditText>

                <EditText
                    android:id="@+id/etxt_confirmpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                  android:background="@drawable/tablet_signup_etxtbg"
                 android:drawableLeft="@drawable/tablet_passwordicon2"
                    android:drawablePadding="10dp"
                    android:hint="New password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="8dp">
                </EditText>

                <EditText
                    android:id="@+id/etxt_confirmnewpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/tablet_signup_etxtbglast"
            android:drawableLeft="@drawable/tablet_passwordicon2"
                    android:drawablePadding="10dp"
                    android:hint="Confirm new password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="8dp">
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/btn_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/liout_changepassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/signup_signupmargintop"
                   android:background="@drawable/selector_tablet_btnsignin"
                android:text="Change Password"
                android:textColor="@color/white"
                android:textSize="18sp" >
            </Button>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/D:/SYL-Backup-18-dec-2015/SYL-backup-12-oct-2015/app/src/main/res/layout-sw720dp/fragment_myprofile.xml -->