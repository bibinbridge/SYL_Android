<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scr_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp" >

        <RelativeLayout
            android:id="@+id/rel_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/img_userimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
              android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/syl_testuserimage"
        >
            </ImageView>
                  <LinearLayout
            android:id="@+id/liout_addphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
            >
             <com.makeramen.RoundedImageView
                android:id="@+id/row_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="10dip"
                android:scaleType="fitCenter"
                android:src="@drawable/syl_nouserimage"
                app:border_color="#cccccc"
                app:border_width="1dip"
                app:corner_radius="100dip"
        
                 />
</LinearLayout>
            <RelativeLayout
                android:id="@+id/rel_userdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_userimage" >

                <LinearLayout
                    android:id="@+id/liout_userdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/profileedit_bg"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/etxt_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/signin_usernameicon"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:maxLength="30"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:textCursorDrawable="@drawable/cursordrawable">
                    </EditText>

                    <EditText
                        android:id="@+id/etxt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/signin_emailicon"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:text=""
                             android:textCursorDrawable="@null"
                        android:textColor="@color/white"
                        android:textSize="14sp" >
                    </EditText>
                    <EditText
                        android:id="@+id/etxt_facetimeid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/facetimetimeicon"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@drawable/cursordrawable"
                        android:textColor="@color/white"
                        android:textSize="14sp" >
                    </EditText>

                    <EditText
                        android:id="@+id/etxt_skypeid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/signup_skypeicon"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:text=""
                        android:textCursorDrawable="@drawable/cursordrawable"
                        android:textColor="@color/white"
                        android:textSize="14sp" >
                    </EditText>






                    <EditText
                        android:id="@+id/etxt_hangouticon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:drawableLeft="@drawable/signup_hangouticon"
                        android:drawablePadding="10dp"
                        android:singleLine="true"
                        android:text="test@gmail.com"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textCursorDrawable="@drawable/cursordrawable" >
                    </EditText>

                    <LinearLayout
                        android:id="@+id/etxt_countrycode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbg"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_countrcodeicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/signup_countrycodeicon" >
                        </ImageView>

                        <TextView
                            android:id="@+id/txt_countrycode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:freezesText="true"
                            android:text="India05"
                            android:textColor="@color/white" >
                        </TextView>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etxt_mobilenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/signup_etxtbglast"
                        android:drawableLeft="@drawable/signup_mobileicon"
                        android:drawablePadding="10dp"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="456456456"
                        android:textCursorDrawable="@drawable/cursordrawable"
                        android:textColor="@color/white"
                        android:textSize="14sp" >
                    </EditText>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_userupdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/liout_userdetails"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/signup_signupmargintop"
                    android:background="@drawable/selector_btnsignin"
               
                    android:text="Update"
                    android:textColor="@color/white" >
                </Button>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_userdetails"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Change Password"
                android:textColor="@color/white"
                android:textSize="18sp" >
            </TextView>

            <LinearLayout
                android:id="@+id/liout_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_changepassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/changepassword_bg"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/etxt_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/signup_etxtbg"
                    android:drawableLeft="@drawable/signup_passwordicon"
                    android:drawablePadding="10dp"
                    android:hint="Current password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursordrawable"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" >
                </EditText>

                <EditText
                    android:id="@+id/etxt_confirmpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/signup_etxtbg"
                    android:drawableLeft="@drawable/signup_passwordicon"
                    android:drawablePadding="10dp"
                    android:hint="New password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textCursorDrawable="@drawable/cursordrawable"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" >
                </EditText>

                <EditText
                    android:id="@+id/etxt_confirmnewpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/signup_etxtbglast"
                    android:drawableLeft="@drawable/signup_passwordicon"
                    android:drawablePadding="10dp"
                    android:hint="Confirm new password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursordrawable"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="14sp" >
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/btn_changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/liout_changepassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/signup_signupmargintop"
                android:background="@drawable/selector_btnchangepassword"
                android:text="Change Password"
                android:textColor="@color/white"
                android:textSize="16sp" >
            </Button>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>